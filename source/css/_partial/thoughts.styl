:root
  --bg-color: #f0f2f5
  --card-bg: #f9f7f7
  --text-color: #000000
  --timestamp-color: #7e7a7a
  --card-border: 0px solid #e1e8ed

// themes/your-theme-name/source/css/thoughts.styl

// Import your main theme styles if not already done
@import "_variables"
@import "_partial/article"

.article-type-thoughts
  .article-inner
    max-width: 800px
    margin: 0 auto
    padding: 20px

  .article-title
    font-size: 2.5em
    text-align: center
    margin-bottom: 20px

  .thoughts-abstract
    font-family: ChineseMono
    font-weight: normal
    border-left: 4px solid #ddd
    padding: 10px 20px
    margin: 20px 0
    background-color: #f9f9f9
    
    p
      margin: 0
      line-height: 1.6

  .thought
    font-weight: normal
    background-color: #f5f5f5
    border-radius: 12px
    padding: 15px
    margin-bottom: 18px
    position: relative

    .thought-content
      font-size: 17px
      line-height: 1.6
      margin-bottom: 20px

    .thought-timestamp
      font-size: 14px
      color: #7e7a7a
      position: absolute
      bottom: 10px
      right: 15px

@media (max-width: 768px)
  .article-type-thoughts
    .article-inner
      padding: 10px

    .thought
      padding: 10px

      .thought-content
        font-size: 16px

      .thought-timestamp
        font-size: 12px