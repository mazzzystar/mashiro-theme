@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"
@import "_extend"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: 'Gowun Dodum'
  font-style: normal
  font-weight: normal
  src: url("/fonts/GowunDodum-Regular.woff2") format("woff2")

@font-face
  font-family: 'Gowun Dodum'
  font-style: normal
  font-weight: bold
  src: url("/fonts/GowunDodum-Regular.woff2") format("woff2")

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url("/fonts/fontawesome-webfont.woff2") format("woff2")
  font-display: block

@font-face
  font-family: LM-Mono-10
  font-style: normal
  font-weight: normal
  src: url("fonts/lmmono10-regular.woff2") format("woff2")

@font-face
  font-family: LM-Mono-10
  font-style: italic
  font-weight: normal
  src: url("fonts/lmmono10-italic.woff2") format("woff2")

@font-face
  font-family: LM-Roman-10
  font-style: normal
  font-weight: normal
  src: url("fonts/lmroman10-regular.woff2") format("woff2")

@font-face
  font-family: LM-Roman-10
  font-style: italic
  font-weight: normal
  src: url("fonts/lmroman10-italic.woff2") format("woff2")

@font-face
  font-family: LM-Roman-10
  font-style: normal
  font-weight: bold
  src: url("fonts/lmroman10-bold.woff2") format("woff2")

@font-face
  font-family: LM-Roman-10
  font-style: italic
  font-weight: bold
  src: url("fonts/lmroman10-bolditalic.woff2") format("woff2")

// Chinese fonts are now defined in font-subset.css
// This prevents loading the full large font files

@font-face
  font-family: biaodian;
  src: url("fonts/biaodian.woff2") format("woff2");
  unicode-range: U+FF0E, U+2014, U+2026, U+00B7, U+201C-201D, U+2018-2019, U+25CF,
    U+3002, U+FF0C, U+3001,
    U+FF1B, U+FF1A, U+FF1F, U+FF01,
    U+FF0D, U+FF0F, U+FF3C,
    U+300C-300F,
    U+300A-300B, U+3008-3009, U+FF08-FF09, U+3014-3015

html
  scroll-padding-top: 80px;

html, body, #container
  height: 100%


// Default font stack (will be used on macOS and other non-Windows systems)
body
  font: font-size font-serif
  -webkit-text-size-adjust: 100%

#content
  margin: 0 auto
  @extend $variable-width

.outer
  clearfix()
  margin: 0 auto
  @extend $variable-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  display: flex
  flex-direction: column
  .mobile-nav-on &
    left: 50%

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

#main-404
  font-size: 40px
  font-weight: bold
  font-family: font-serif
  text-align: center
  margin: 100px 0

a
  transition: 0.2s

@import "_partial/header"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"
@import "_partial/about"
@import "_partial/bilibili"
@import "_partial/toc"
@import "_partial/biaodian"
@import "_partial/thoughts"

if sidebar
  @import "_partial/sidebar"

#main-nav-toggle
  display: none
  @media screen and (max-width: 768px)
    display: block

// Add language switch button styles
.lang-switch
  color: #666
  text-decoration: none
  cursor: pointer
  padding: 5px 10px
  border-radius: 3px
  transition: color 0.2s ease-in-out

  &:hover
    color: #333
    text-decoration: none